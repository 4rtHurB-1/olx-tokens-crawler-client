extends layout

block content
  a(href=`/result/file`) Дивитися файл
  if inProgress
    h2.in-progress= 'В процесі'
  else
    h2.completed= 'Завершено'
  table
    tr
      th Login
      th Access token
      th Refresh token
    tbody
      each res in result
        tr
          td #{res.account}
          if res.error
            td= `Помилка ${res.error}`
            td
              a(href=`/screens/${res.screen}`) #{res.screen}
          else
            td #{res.access_token}
            td #{res.refresh_token}
